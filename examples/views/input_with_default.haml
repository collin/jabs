-#%script(src="/jabs/input_with_default.js.jabs")
:jabs
  :ready
    $[default_value]
      :blur
        if @value === ""
          @value = @default_value
      :focus
        if @value === @default_value
          @value = ""
    
      .blur

%input(type='text' default_value="hello!")
%input(type='text' default_value="hello again!")
